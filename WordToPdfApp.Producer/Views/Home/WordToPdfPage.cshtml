@model WordToPdf
@{
    ViewData["Title"] = "WordToPdf Uygulaması";
}

<br /><br />
<h2>WordToPdf Uygulaması</h2>
<h2>@ViewBag.result</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="WordToPdfPage" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Word Dosyası</label>
                <input type="file" asp-for="WordFile" />
            </div>
            <div class="form-group">
                <label>Email Adresi</label>
                <input asp-for="Email" class="form-control" placeholder="Email adresi giriniz" autocomplete="off" />
            </div>
            <div class="form-group">
                <input type="submit" value="Dönüştür" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>